<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@../styles/bootstrap3.css" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="stl.threebodysimulation.SavePreviewFXMLController">
    <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
        <VBox spacing="5.0">
            <HBox.margin>
                <Insets bottom="20.0" left="20.0" right="5.0" top="20.0"/>
            </HBox.margin>
            <Label fx:id="saveIDLabel" text="Label">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <HBox>
                <GridPane prefHeight="100.0" prefWidth="137.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="152.0" minWidth="10.0"
                                           prefWidth="68.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="134.0" minWidth="10.0"
                                           prefWidth="69.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Infinite:">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label text="Timeskip:" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label text="Speed:" GridPane.rowIndex="2">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label fx:id="infiniteLabel" text="Label" GridPane.columnIndex="1"/>
                    <Label fx:id="timeskipLabel" prefHeight="17.0" prefWidth="36.0" text="Label"
                           GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="speedLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
                <GridPane layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="137.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="152.0" minWidth="10.0"
                                           prefWidth="68.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="134.0" minWidth="10.0"
                                           prefWidth="69.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Mass 1:">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label text="Mass 2:" GridPane.rowIndex="1">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label text="Mass 3:" GridPane.rowIndex="2">
                        <font>
                            <Font name="System Bold" size="12.0"/>
                        </font>
                    </Label>
                    <Label fx:id="massLabel1" text="Label" GridPane.columnIndex="1"/>
                    <Label fx:id="massLabel2" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Label fx:id="massLabel3" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                </GridPane>
            </HBox>
        </VBox>
        <Separator orientation="VERTICAL"/>
        <VBox alignment="CENTER" prefWidth="75.0" spacing="20.0">
            <ImageView fx:id="selectButton" fitHeight="40.0" fitWidth="200.0" onMouseClicked="#select"
                       onMouseEntered="#startHoverSelect" onMouseExited="#stopHoverSelect" pickOnBounds="true"
                       preserveRatio="true" style="-fx-opacity: 0.3;">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <Image url="@../icons/confirmIcon.png"/>
            </ImageView>
            <ImageView fx:id="deleteButton" fitHeight="40.0" fitWidth="200.0" onMouseClicked="#delete"
                       onMouseEntered="#startHoverDelete" onMouseExited="#stopHoverDelete" pickOnBounds="true"
                       preserveRatio="true" style="-fx-opacity: 0.3;">
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <Image url="@../icons/deleteIcon.png"/>
            </ImageView>
        </VBox>
    </HBox>
    <Separator prefWidth="200.0"/>
</VBox>
