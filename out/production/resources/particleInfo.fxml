<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="15.0" stylesheets="@bootstrap3.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="stl.threebodysimulation.InfoFXMLController">
    <children>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
              <Label fx:id="objectLabel" text="Object">
                  <font>
                      <Font name="System Bold" size="16.0" />
                  </font>
              </Label>
            <Circle fx:id="objectCircle" fill="#1f93ff" radius="9.0" stroke="TRANSPARENT" strokeType="INSIDE" strokeWidth="0.5" />
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
        <StackPane prefWidth="225.0">
            <children>
                <VBox prefWidth="100.0" spacing="15.0">
                    <children>
                        <Label text="POS:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="VEL:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <Label text="ACC:">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" prefWidth="100.0" spacing="15.0">
                    <children>
                        <Label fx:id="positionInfo" text="N/A" textAlignment="RIGHT" />
                        <Label fx:id="velocityInfo" text="N/A" textAlignment="RIGHT" />
                        <Label fx:id="accelerationInfo" text="N/A" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</VBox>
